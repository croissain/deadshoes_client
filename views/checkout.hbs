<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Checkout</h2>
            </div>
        </div>
        <div class="mb-5 row justify-content-center">
            <form method="POST" id="checkoutForm" name="checkoutForm" class="checkoutForm row">
                <div class="col-lg-8 mb-4">
                    <div class="wrapper img" style="background-image: url(images/b5.jpg);">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="contact-wrap w-100 p-md-5 p-4">
                                    <h3 class="mb-4 text-white">Order details</h3>
                                    <div id="form-message-warning" class="mb-4"></div>
                                    <div id="form-message-success" class="mb-4 text-white">
                                        Thank you for buying.
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label text-white" for="name">Full Name</label>
                                                <input type="text" class="form-control checkout-form-control"
                                                    name="name" id="name" placeholder="{{customer.name}}">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label text-white" for="email">Email Address</label>
                                                <input type="email" class="form-control checkout-form-control "
                                                    name="email" id="email" placeholder="{{customer.email}}">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label text-white" for="email">Phone</label>
                                                <input type="text" class="form-control checkout-form-control"
                                                    name="phone" id="phone" placeholder="{{customer.phone}}">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="label text-white" for="email">Address</label>
                                                <input type="text" class="form-control checkout-form-control"
                                                    name="address" id="address" placeholder="{{customer.address}}">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="label" for="#">Note</label>
                                                <textarea name="message" class="form-control checkout-form-control"
                                                    id="message" cols="30" rows="4" placeholder="Message"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="checkout-payment" class="mt-4 checkout-payment">
                        <div class="payment-methods">
                            <h3>Payment Method</h3>
                            <div class="payment-method">
                                <div class="d-flex flex-row align-content-center">
                                    <div class="pt-2 pr-2"><input type="radio" name="radio1" id="r1" checked></div>
                                    <div class="d-flex w-100 px-2">
                                        <div class="pt-2">
                                            <p><i class="fab fa-cc-visa text-primary"></i></i> Visa Debit Card</p>
                                        </div>
                                        <div class="ms-auto pt-2">************3456</div>
                                    </div>
                                </div>
                            </div>
                            <div class="payment-method">
                                <div class="d-flex flex-row align-content-center">
                                    <div class="pt-2 pr-2"><input type="radio" name="radio1" id="r1" checked></div>
                                    <div class="d-flex w-100 px-2">
                                        <div class="pt-2">
                                            <p><i class="fab fa-cc-mastercard"></i></i> Mastercard Office</p>
                                        </div>
                                        <div class="ms-auto pt-2">************3456</div>
                                    </div>
                                </div>
                            </div>
                            <div class="payment-method">
                                <div class="d-flex flex-row align-content-center">
                                    <div class="pt-2 pr-2"><input type="radio" name="radio1" id="r1" checked></div>
                                    <div class="d-flex w-100 px-2">
                                        <div class="pt-2">
                                            <p><i class="fas fa-truck"></i></i> Cash on delivery (COD)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="checkout-summary">
                        <div class="bg-light rounded d-flex flex-column">
                            <div class="p-2 ml-3">
                                <h4>Order Recap</h4>
                            </div>
                            {{#each cartProductsDetail}}
                            <div class="p-2 d-flex pt-3">
                                <div class="col-8">{{this.product.productname}}, Size: {{this.size}}</div>
                                <div class="col-2 text-success">x {{this.amount}}</div>
                                <p class="ml-auto"><b>${{mul this.amount this.product.price}}</b></p>
                            </div>
                            {{/each}}
                            <div class="border-top px-4 mx-3"></div>
                            <div class="p-2 d-flex pt-3">
                                <div class="col-10"><b>Total</b></div>
                                <div class="ml-auto"><b class="green">${{totalPrice}}</b></div>
                            </div>
                        </div>
                    </div>
                    <div class="checkout-btn d-flex">
                        <a href="/cart" type="button" class="mt-4 me-2 submit-checkout btn btn-outline-secondary">Back to cart</a>
                        <button type="button" class="mt-4 submit-checkout btn btn-primary flex-grow-1"
                            id="btn-proceed-order" order="{{cart.orderid}}">Proceed to payment</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="/js/jquery-3.6.0.min.js"></script>
<script src="/js/checkout.js"></script>