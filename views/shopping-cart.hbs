<div>
    <div class="container padding-bottom-3x mb-1">
        <!-- Alert-->
        <div class="mt-4 alert alert-info alert-dismissible fade show text-center" style="margin-bottom: 30px;"><span
                class="alert-close" data-dismiss="alert"></span><img class="d-inline align-center"
                src="data:image/svg+xml;utf8;base64,"
                width="18" height="18" alt="Medal icon">&nbsp;&nbsp;With this purchase you will earn
            <strong>290</strong> Reward Points.
        </div>
        <!-- Shopping Cart-->
        <div class="table-responsive shopping-cart">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Subtotal</th>
                        <th class="text-center">Total</th>
                        <th class="text-center text-danger">Clear Cart</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cartProductsDetail}}
                    <tr>
                        <td>
                            <div class="product-item">
                                <a class="product-thumb" href="/products/{{this.product.productid}}"><img
                                        src="{{this.product.image.[0]}}" alt="Product"></a>
                                <div class="product-info">
                                    <h4 class="product-title"><a href="/products/{{this.product.productid}}">{{this.product.productname}}</a></h4>
                                    <span><em>Size: </em> {{this.size}}</span>
                                    <span><em>Color: </em>{{this.product.color}}</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center">
                            {{!-- <input class="count-input" min="0" max="50" type="number" value=""> --}}
                            <div class="product-quantity-wrapper">
                                <span class="btn-minus product-quantity-btn value-changed"
                                    name="{{this.product.productid}}" shoesize="{{this.size}}" value="-1">
                                    <i class="fas fa-minus"></i>
                                </span>
                                <span class="product-quantity" name="{{this.product.productid}}"
                                    data-count="{{this.amount}}">{{this.amount}}</span>
                                <span class="btn-plus product-quantity-btn value-changed"
                                    name="{{this.product.productid}}" shoesize="{{this.size}}" value="1">
                                    <i class="fas fa-plus"></i>
                                </span>
                            </div>
                        </td>
                        <td class="text-center text-lg text-medium">${{this.product.price}}</td>
                        <td class="text-center text-lg text-medium totalItemCost"
                            id="{{this.product.productid}}and{{this.size}}">${{mul this.amount this.product.price}}</td>
                        <td class="text-center"><a class="remove-from-cart" name="{{this.product.productid}}"
                                shoesize="{{this.size}}" href="" data-bs-toggle="modal"
                                data-bs-target="#delete-product-modal"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="shopping-cart-footer">
            <div class="column">
                <form class="coupon-form" method="post">
                    <input class="form-control form-control-sm" type="text" placeholder="Coupon code" required="">
                    <button class="btn btn-outline-primary btn-sm" type="submit">Apply Coupon</button>
                </form>
            </div>
            <div class="column text-lg">Subtotal: <span class="text-medium green" id="totalCost">${{totalPrice}}</span>
            </div>
        </div>
        <div class="shopping-cart-footer">
            <div class="column"><a class="btn btn-outline-secondary" href="/products"><i
                        class="icon-arrow-left"></i>&nbsp;Back to Shopping</a></div>
            {{#if totalPrice}}
            <div class="column"><a class="btn btn-success" href="/checkout">Checkout</a></div>
            {{/if}}
        </div>

        <form name="delete-product-form" method="POST"></form>

        <div id="delete-product-modal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Remove product</h5>
                    </div>
                    <div class="modal-body">
                        <p>Remove this from your cart?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger value-changed" id="btn-delete-product" value="0"
                            data-bs-dismiss="modal">Remove</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/jquery-3.6.0.min.js"></script>
<script src="/js/cart.js"></script>