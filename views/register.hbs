<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!-- Title Page-->
    <title>Dead Shoes | Register Forms</title>

    <!-- Main CSS-->
    <link href="/css/base.css" rel="stylesheet" media="all">
    <link href="/css/register.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Registration Form</h2>
                    <form id="register-form" method="POST">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Username</label>
                                    <input id="username" class="input--style-4" type="text" name="username">
                                    <div class="error-message-box">
                                        &nbsp;
                                    </div>
                                    {{#if errorCode}}
                                    <p class="text-red text-center">Username invalid</p>
                                    {{/if}}
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Full name</label>
                                    <input id="name" class="input--style-4" type="text" name="name">
                                    <div class="error-message-box">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group invalid">
                                    <label class="label">Password</label>
                                    <input id="password" class="input--style-4" type="password" name="password">
                                    <div class="error-message-box">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>

                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Address</label>
                                    <input id="address" class="input--style-4" type="text" name="address">
                                    <div class="error-message-box">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Confirm Password</label>
                                    <input id="confirmPassword" class="input--style-4" type="password"
                                        name="confirmPassword">
                                    <div class="error-message-box">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Phone Number</label>
                                    <input id="phone" class="input--style-4" type="text" name="phone">
                                    <div class="error-message-box">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Email</label>
                                    <input id="email" class="input--style-4" type="email" name="email">
                                    <div class="error-message-box">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                            <div class="p-t-15 col-2">
                                <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
<!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<script src="/js/validation.js"></script>
<script>
    Validator({
        errorSelector: '.error-message-box',
        form: '#register-form',
        formGroupSelector: '.input-group',
        rules: [
            Validator.isRequired('#username', "Please enter your username!"),
            Validator.isUsername('#username', "Username must not contain special characters!"),
            Validator.isRequired('#name', "Please enter your full name!"),
            Validator.isRequired('#address', "Please enter your address!"),
            Validator.isRequired('#phone', "Please enter your phone number!"),
            Validator.isRequired('#email'),
            Validator.isEmail('#email'),
            Validator.minLength('#password', 6),
            Validator.isRequired('#confirmPassword'),
            Validator.isConfirmed('#confirmPassword', function () {
                return document.querySelector('#register-form #password').value;
            }, "Confirm password does not match!")
        ],
        onSubmit: function (data) {
            console.log(data);
        }
    });
</script>