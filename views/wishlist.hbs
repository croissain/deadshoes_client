<div>
    <div class="container padding-bottom-3x mb-1">
        <!-- Shopping Wishlist-->
        <div class="table-responsive shopping-cart">
            <h2 class="heading-section text-center mb-4">My wishlist</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each wishlistProductsDetail}}
                    <tr>
                        <td>
                            <div class="product-item">
                                <a class="product-thumb" href="/products/{{this.product.productid}}"><img
                                        src="{{this.product.image.[0]}}" alt="Product"></a>
                                <div class="product-info">
                                    <h4 class="product-title"><a href="/products/{{this.product.productid}}">{{this.product.productname}}</a></h4>
                                    <span><em>Color: </em>{{this.product.color}}</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center text-lg text-medium">${{this.product.price}}</td>
                        <td class="text-center"><a class="remove-from-wishlist" name="{{this.product.productid}}"
                                href="" data-bs-toggle="modal" data-bs-target="#delete-product-modal"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="shopping-cart-footer">
            <div class="column"><a class="btn btn-outline-secondary" href="/products"><i
                        class="icon-arrow-left"></i>&nbsp;Back to Shopping</a></div>
        </div>
        <form name="delete-product-form" method="POST"></form>

        <div id="delete-product-modal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Remove product</h5>
                    </div>
                    <div class="modal-body">
                        <p>Remove this from your wishlist?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger value-changed" id="btn-delete-product" value="0"
                            data-bs-dismiss="modal">Remove</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery-3.6.0.min.js"></script>
<script src="/js/wishlist.js"></script>